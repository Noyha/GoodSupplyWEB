@model IEnumerable<GoodSupplyWEB.Models.DB.Products>
@using GoodSupplyWEB.Models
@{
    ViewBag.Title = "Index";
}

<style>
    th {
        text-align: right;
    }
</style>

<div class="dir-rtl">

    <h2>ניהול מוצרים</h2>

    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Categories.Name)*@
                קטגורית מוצר
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("פרטים", "Details", new { id = item.Id }) |
                    @Html.ActionLink("מחק", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
