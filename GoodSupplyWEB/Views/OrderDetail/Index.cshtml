@model IEnumerable<GoodSupplyWEB.Models.DB.OrderDetails>

@{
    ViewBag.Title = "Index";
}

<style>
    th {
        text-align: right;
    }
</style>

<div class="dir-rtl">
    <h2>ניהול פרטי הזמנה</h2>

    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOrderPrice)
            </th>
            <th>
                הזמנה מס'
                @*@Html.DisplayNameFor(model => model.Orders.Id)*@
            </th>
            <th>
                מוצר יצרן מס'
                @*@Html.DisplayNameFor(model => model.ManufacturerProducts.Name)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOrderPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orders.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerProducts.Id)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("פרטים", "Details", new { id = item.Id }) |
                    @Html.ActionLink("מחק", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>