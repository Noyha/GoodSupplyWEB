@model GoodSupplyWEB.ViewModels.OrderDetailViewModel

@{
    ViewBag.Title = "Details";
}

<div class="dir-rtl">
    <h2>פרטים</h2>

    <div class="form-horizontal">
        <h4>פרטי הזמנה</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrderDetails.Id)

        <fieldset disabled>
            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.OrderId, "OrderId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.OrderDetails.OrderId, new SelectList(Model.Orders, "Id", "CreateDate"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OrderDetails.OrderId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.ManufacturerProductId, "ManufacturerProductId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.OrderDetails.ManufacturerProductId, new SelectList(Model.ManufacturerProducts, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OrderDetails.ManufacturerProductId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderDetails.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderDetails.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.QuantityPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderDetails.QuantityPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderDetails.QuantityPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.ItemPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderDetails.ItemPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderDetails.ItemPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderDetails.TotalOrderPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrderDetails.TotalOrderPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderDetails.TotalOrderPrice, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-10">
            @Html.Partial("_EditButtonPartial", Model.OrderDetails.Id)
            @Html.Partial("_BackToListButtonPartial")
        </div>
    </div>
</div>
