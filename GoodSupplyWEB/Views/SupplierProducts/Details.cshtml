@model GoodSupplyWEB.ViewModels.PriceViewModel

@{
    ViewBag.Title = "Details";
}

<div class="dir-rtl">
    <h2>פרטים</h2>

    <div class="form-horizontal">
        <h4>מחיר</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Prices.Id)
        <fieldset disabled>

            <div class="form-group">
                @Html.LabelFor(model => model.Prices.SupplierId, "SupplierId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Prices.SupplierId, new SelectList(Model.Suppliers, "Id", "FirstName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prices.SupplierId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prices.ManufacturerProductId, "ManufacturerProductId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Prices.ManufacturerProductId, new SelectList(Model.ManufacturerProducts, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prices.ManufacturerProductId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prices.ProductPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prices.ProductPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prices.ProductPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prices.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prices.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prices.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prices.ManufacturerPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prices.ManufacturerPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prices.ManufacturerPrice, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-10">
            @Html.Partial("_EditButtonPartial", Model.Prices.Id)
            @Html.Partial("_BackToListButtonPartial")
        </div>
    </div>
</div>
