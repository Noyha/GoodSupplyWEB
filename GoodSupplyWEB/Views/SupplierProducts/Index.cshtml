@model IEnumerable<GoodSupplyWEB.Models.DB.Prices>
@{
    ViewBag.Title = "Index";
}

<style>
    th {
        text-align: right;
    }
</style>

<div class="dir-rtl">
    <h2>ניהול מחירים</h2>

    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerPrice)
            </th>
            <th>
                ManufacturerProductId
                @*@Html.DisplayNameFor(model => model.ManufacturerProducts.Name)*@
            </th>
            <th>
                SupplierId
                @*@Html.DisplayNameFor(model => model.Suppliers.Id)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerProducts.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suppliers.Id)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("פרטים", "Details", new { id = item.Id }) |
                    @Html.ActionLink("מחק", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>


