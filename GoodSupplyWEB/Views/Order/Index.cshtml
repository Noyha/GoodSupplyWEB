@model IEnumerable<GoodSupplyWEB.Models.DB.Orders>

@{
    ViewBag.Title = "Index";
}

<style>
    th {
        text-align: right;
    }
</style>

<div class="dir-rtl">
    <h2>ניהול הזמנות</h2>

    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>

    <table class="table">
        <tr>
            <th>
                לקוח מס'
                @*@Html.DisplayNameFor(model => model.Clients.Id)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientApproval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierApproval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                ספק מס'
                @*@Html.DisplayNameFor(model => model.Suppliers.Id)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clients.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientApproval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierApproval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suppliers.Id)
                </td>
                <td>
                    @Html.ActionLink("ערוך", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("פרטים", "Details", new { id = item.Id }) |
                    @Html.ActionLink("מחק", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
