
@{
    ViewBag.Title = "SelectRegister";
}

<div class="dir-rtl">
    <div class="well well-sm" style="background-color:hsla(15, 82%, 45%,0.8); color: white;">
        <h2>בחר סוג משתמש</h2>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="radio" name="userType" value="Client" checked> לקוח <br />
                        <input type="radio" name="userType" value="Supplier"> ספק
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary btn-sm" value="בחר" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
